{
  "manifest_version": 3,
  "name": "Consumption",
  "version": "1.0",
  "description": "Tracks the time usage on different websites",
  "permissions": [
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.ylilauta.org/*",
    "https://www.reddit.com/*",
    "https://www.twitter.com/*",
    "https://www.youtube.com/*",
    "https://www.hs.fi/*",
    "https://www.iltalehti.fi/*",
    "https://www.is.fi/*",
    "https://www.yle.fi/*",
    "https://elearn.uef.fi/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ylilauta.org/*",
        "https://www.reddit.com/*",
        "https://www.twitter.com/*",
        "https://www.youtube.com/*",
        "https://www.hs.fi/*",
        "https://www.iltalehti.fi/*",
        "https://www.is.fi/*",
        "https://www.yle.fi/*",
        "https://elearn.uef.fi/*",
        "https://github.com/*"
      ],
      "js": ["extension.js"]
    }
  ]
}